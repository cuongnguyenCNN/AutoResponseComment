{
  "manifest_version": 3,
  "name": "Stand Up Reminder+",
  "version": "1.1",
  "description": "Nhắc bạn đứng dậy định kỳ với thời gian tùy chọn.",
  "permissions": ["notifications", "alarms", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
